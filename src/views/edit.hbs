<!-- In case of error, you should display div with class "errorContainer" -->
<!-- You can choose to display the first error or all of them (error message/s in your opinion) -->


{{#if errors}}
<div>
    <div class="errorContainer">
        {{#each errors}}
        <p>{{msg}}</p>
        {{/each}}
    </div>
</div>
{{/if}}
<section id="edit-container">
    <div class="edit-container-info">
        <h1>Edit Announcement</h1>
        <form action="/edit/{{data._id}}" method="POST">
            <label>Name:</label>
            <input type="text" id="name" name="name" value="{{data.name}}">
            <label>Image:</label>
            <input type="text" id="image" name="image" value="{{data.image}}">
            <label>Price:</label>
            <input type="number" id="price" name="price" value="{{data.price}}">
            <label>Description:</label>
            <textarea name="description"
                id="description">{{data.description}}</textarea>
            <label>Payment method:</label>
            <select id="payment" name="paymentType">
                <option value="crypto-wallet" {{#if data.isWallet}} selected {{/if}}>Crypto Wallet</option>
                <option value="credit-card" {{#if data.isCreditCard}} selected {{/if}}>Credit Card</option>
                <option value="debit-card" {{#if data.isDebitCard}} selected {{/if}}>Debit Card</option>
                <option value="paypal" {{#if data.isPaypal}} selected {{/if}}>PayPal</option>
            </select>
            <input type="submit" id="btn" value="EDIT"></input>
        </form>
    </div>
</section>