{{#if errors}}
<div>
    <div class="errorContainer">
        {{#each errors}}
        <p>{{msg}}</p>
        {{/each}}
    </div>
</div>
{{/if}}
<section id="create-container">
    <div class="create-container-info">
        <h1>Create Announcement</h1>
        <h4>Post your coins to sell</h4>
        <form action="/create" method="POST">
            <label>Name:</label>
            <input type="text" id="name" name="name" value="{{data.name}}" placeholder="Bitcoin">
            <label>Image:</label>
            <input type="text" id="image" name="image" value="{{data.image}}" placeholder="http://...">
            <label>Price:</label>
            <input type="number" id="price" name="price" value="{{data.price}}" placeholder="31,166.71">
            <label>Description:</label>
            <textarea id="description" name="description" placeholder="Introduce your coins...">{{data.description}}</textarea>
            <label>Payment method:</label>
            <select id="payment" name="paymentType">
                <option value="crypto-wallet" {{#if data.isWallet}} selected {{/if}}>Crypto Wallet</option>
                <option value="credit-card" {{#if data.isCreditCard}} selected {{/if}}>Credit Card</option>
                <option value="debit-card" {{#if data.isDebitCard}} selected {{/if}}>Debit Card</option>
                <option value="paypal" {{#if data.isPaypal}} selected {{/if}}>PayPal</option>
            </select>
            <input type="submit" id="btn" value="TRADE"></input>
        </form>
    </div>
</section>